{
  "name": "mcp-agentify",
  "version": "1.0.0",
  "description": "CLI tool to generate Model Context Protocol (MCP) servers from existing REST APIs or Node.js endpoints",
  "main": "dist/index.js",
  "bin": {
    "agentify": "dist/cli.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "start": "node dist/cli.js",
    "test": "jest",
    "test:security": "jest --testPathPattern=security",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "security:audit": "npm audit --audit-level=moderate",
    "security:snyk": "snyk test --severity-threshold=high",
    "security:deps": "audit-ci --config audit-ci.json",
    "security:scan": "npm run security:audit && npm run security:deps",
    "prepublishOnly": "npm run build && npm run security:scan"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "cli",
    "rest-api",
    "nodejs",
    "generator",
    "typescript",
    "express",
    "flask",
    "django",
    "fastapi",
    "spring-boot",
    "code-generation"
  ],
  "author": {
    "name": "Saurabh Kohli",
    "email": "me.saurabhkohli@gmail.com",
    "url": "https://github.com/me-saurabhkohli"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/me-saurabhkohli/agentify.git"
  },
  "bugs": {
    "url": "https://github.com/me-saurabhkohli/agentify/issues"
  },
  "homepage": "https://github.com/me-saurabhkohli/agentify#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "axios": "^1.6.0",
    "bcryptjs": "^3.0.2",
    "boxen": "^8.0.1",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "dotenv": "^17.2.3",
    "figlet": "^1.9.3",
    "fs-extra": "^11.1.0",
    "glob": "^10.3.0",
    "handlebars": "^4.7.8",
    "helmet": "^8.1.0",
    "inquirer": "^9.2.0",
    "inquirer-autocomplete-prompt": "^3.0.1",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "listr2": "^9.0.4",
    "ora": "^9.0.0",
    "rate-limiter-flexible": "^8.0.1",
    "swagger-parser": "^10.0.3",
    "typescript": "^5.2.0",
    "update-notifier": "^7.3.1",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/figlet": "^1.7.0",
    "@types/fs-extra": "^11.0.0",
    "@types/helmet": "^0.0.48",
    "@types/inquirer": "^9.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.8.0",
    "@types/update-notifier": "^6.0.8",
    "@typescript-eslint/eslint-plugin": "^6.7.0",
    "@typescript-eslint/parser": "^6.7.0",
    "audit-ci": "^7.1.0",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "snyk": "^1.1300.0",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
